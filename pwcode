import sys
sys.path.append('bin')

import os, psutil
from app import App

def is_running(script):
    for p in psutil.process_iter():
        if p.name().startswith('python'):
            if len(p.cmdline())>1 and script in p.cmdline()[1] and p.pid !=os.getpid():
                print(p.pid)
                return True
    return False


if __name__ == "__main__":
    # TODO: Legg inn if else nÃ¥r lagt til pyro4
    running = is_running(os.path.basename(__file__))
    # if running:
    # else:   
    #      
    app = App()
    app.build_ui()

    for r, d, f in os.walk(app.model.tmp_dir):
        for file in f:
            if 'Untitled-' in file:
                app.run_command('open_file', app.model.tmp_dir + '/' + file)

    app.run_command('show_welcome')

    if len(sys.argv) > 1:
        for file in sys.argv[1:]:
            if os.path.isfile(file):
                app.run_command('open_file', file)

    app.run(running)