import os, sys, psutil, xmlrpc.client, gi
# gi.require_version('Wnck', '3.0')
# from gi.repository import Wnck
gi.require_version('Gdk', '3.0')
from gi.repository import Gdk
sys.path.append('bin')
from bin.app import App




def getWindow(pid):
    found = False
    for window in windowList:
        if window.get_pid() == pid:
            found = True
            return window

    if not found:
        return None


def is_running(script): # WAIT: Bare sjekke om fÃ¥r kontakt med serverproxy heller?
    for p in psutil.process_iter():
        if p.name().startswith('python'):
            if len(p.cmdline())>1 and script in p.cmdline()[1] and p.pid !=os.getpid():
                return str(p.pid)


def open_files(args, app):
    if len(args) > 1:
        for file in sys.argv[1:]:
            if os.path.isfile(file):
                app.run_command('open_file', file)


if __name__ == "__main__":
    port = 9000
    pid = is_running(os.path.basename(__file__))
    if pid:
        app = xmlrpc.client.ServerProxy('http://localhost:' + str(port))
        open_files(sys.argv, app)
        app.focus()
    else:            
        app = App()
        app.build_ui()

        for r, d, f in os.walk(app.model.tmp_dir):
            for file in f:
                if 'Untitled-' in file:
                    app.run_command('open_file', app.model.tmp_dir + '/' + file)

        app.run_command('show_welcome')
        open_files(sys.argv, app)
        app.run(port)

